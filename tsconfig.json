{
    "compilerOptions": {
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES6",
        "jsx": "preserve",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleResolution": "node"
    },
    "include": ["pages/**/*"],
    "exclude": ["node_modules"]
}